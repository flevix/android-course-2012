<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.translater"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <activity android:name=".Translater"
            android:label="@string/title_activity_translater" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" android:name="TranslateActivity"
            android:label = "@string/title_activity_translater">
		</activity>
    </application>

</manifest>